{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "source/routing/src/Itinero/**/*.cs",
            "source/routing/src/Itinero.Geo/**/*.cs",
            "source/routing/src/Itinero.IO.Osm/**/*.cs",
            "source/routing/src/Itinero.IO.Shape/**/*.cs",
            "source/optimization/src/Itinero.Optimization/**/*.cs"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "itinero"
    },
    {
      "src": [
        {
          "files": [
            "source/itinero-transit/src/Itinero.Transit/**/*.cs",
            "source/itinero-transit/src/Itinero.Transit.IO.LC/**/*.cs"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "itinero-transit"
    },
    {
      "src": [
        {
          "files": [
            "source/GTFS/src/GTFS/**/*.cs"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "gtfs"
    },
    {
      "src": [
        {
          "files": [
            "source/openlr/src/OpenLR/**/*.cs",
            "source/openlr/src/OpenLR.Geo/**/*.cs"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "openlr"
    },
    {
      "src": [
        {
          "files": [
            "source/core/src/OsmSharp/**/*.cs",
            "source/core/src/OsmSharp.Geo/**/*.cs"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "osmsharp"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "itinero/**.yml",
          "itinero/index.md"
        ]
      },
      {
        "files": [
          "itinero-transit/**.yml",
          "itinero-transit/index.md"
        ]
      },
      {
        "files": [
          "gtfs/**.yml",
          "gtfs/index.md"
        ]
      },
      {
        "files": [
          "openlr/**.yml",
          "openlr/index.md"
        ]
      },
      {
        "files": [
          "osmsharp/**.yml",
          "osmsharp/index.md"
        ]
      },
      {
        "files": [
          "releasenotes/**.md",
          "releasenotes/**.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      },
      {
        "files": [
          "docs/**.md",
          "docs/**.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docs/images/**.png"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",    
    "globalMetadata": {
      "_appTitle": "Itinero - Documentation",
      "_appFooter": "Built by Itinero, MIT licensed."
    },
    "fileMetadataFiles": [],
    "template": [
      "default",
      "docfx-tmpl/src",
	    "custom-template"
    ],
    "postProcessors": [],
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false
  }
}